<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:background="@color/nav_bar_menu"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_1sdp">

        <ImageView
            android:id="@+id/ivPMenuImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/tvPMenuTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/ivPMenuImg"
            android:text="Default Text"
            android:textColor="@color/nav_bar_menu_txt"
            android:textSize="@dimen/dim_nav_hdr_title" />

        <TextView
            android:id="@+id/tvPMenuCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvPMenuTxt"
            android:gravity="center"
            android:textColor="@color/nav_bar_menu_txt"
            android:textSize="@dimen/dim_nav_hdr_title" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ivPMenuImg"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/colorGreyOverlay" />
</LinearLayout>